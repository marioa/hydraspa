#!/usr/bin/env python
from __future__ import print_function

from docopt import docopt

import hydraspa as hrsp


def do_gather(d):
    out = hrsp.gather(d)
    for k, v in out.items():
        print("{}: {}".format(k, v.mean()))


if __name__ == '__main__':
    args = docopt(hrsp.cli.__doc__)

    if args['split']:
        # pressures?
        if args['--pressures']:
            pressures = map(float, args['<P>'])
        else:
            pressures = None
        if args['--ncycles']:
            cycles = int(args['--ncycles'])
        else:
            cycles = None

        hrsp.passport.create_passport(args['<dirname>'])
        hrsp.split(args['<dirname>'],
                   int(args['--ntasks']),
                   ncycles=cycles,
                   pressures=pressures)
    elif args['check']:
        hrsp.check(args['<dirname>'])
    elif args['gather']:
        do_gather(args['<dirname>'])
