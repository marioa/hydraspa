#!/usr/bin/env python
"""Parallel Raspa creator

Usage:
  paraspa split <dirname> <N>
  paraspa check <dirname>
  paraspa gather <dirname>

Options:
  -h --help
  --version

"""
from __future__ import print_function

from docopt import docopt

import paraspa as prsp

def do_gather(d):
    out = prsp.gather(d)
    for k, v in out.items():
        print("{}: {}".format(k, v.mean()))


if __name__ == '__main__':
    args = docopt(__doc__)

    if args['split']:
        prsp.split(args['<dirname>'], int(args['<N>']))
    elif args['check']:
        prsp.check(args['<dirname>'])
    elif args['gather']:
        do_gather(args['<dirname>'])
